{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, 2, { "SwitchCase": 1 }],
    "semi": [2, "never"],
    "space-before-blocks": 2,
    "space-before-function-paren": [2, {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "space-in-parens": 2,
    "space-infix-ops": 2,
    "spaced-comment": 2
  }
}
